pipeline {
    agent { dockerfile true }
    environment {
        JPL_GITHUB_TOKEN    = 'abc123'
    }
    stages {
        stage('Build') {
            steps {
                echo 'Starting to build docker image'

                script {
                    def customImage = docker.build("my-image:${env.BUILD_ID}", "--build-arg JPL_GITHUB_TOKEN=bongo", "--no-cache", ".")
                }
            }
        }
    }
}
